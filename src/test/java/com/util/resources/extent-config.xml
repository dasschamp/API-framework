<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
	<configuration>
		<!-- report theme -->
		<!-- standard, dark -->
		<theme>standard</theme>

		<!-- document encoding -->
		<!-- defaults to UTF-8 -->
		<encoding>UTF-8</encoding>

		<!-- protocol for script and stylesheets -->
		<!-- defaults to https -->
		<protocol>https</protocol>

		<!-- title of the document -->
		<documentTitle>API Automation</documentTitle>

		<!-- report name - displayed at top-nav <img src= "../wselogo.png" />-->
		<reportName><![CDATA[
				<img src= "../src/test/java/com/util/resources/logo.png" />
		]]></reportName>

		<!-- report headline - displayed at top-nav, after reportHeadline -->
		<reportHeadline></reportHeadline>

		<!-- global date format override -->
		<!-- defaults to yyyy-MM-dd -->
		<dateFormat>yyyy-MM-dd</dateFormat>

		<!-- global time format override -->
		<!-- defaults to HH:mm:ss -->
		<timeFormat>HH:mm:ss</timeFormat>

		<!-- custom javascript -->
		<scripts>
            <![CDATA[
                $(document).ready(function() {
                  $('.logo-container.blue.darken-2').text('Automation');
                  $('.right.hide-on-med-and-down.nav-right').css('display','none');
                });
            ]]>
		</scripts>

		<!-- hide extent report section - $('.logo-container.blue.darken-2').css('display','none'); 
			update extend report text - $('.logo-container.blue.darken-2').text('NSE 
			API Automation'); hide top right panel - $('.right.hide-on-med-and-down.nav-right').css('display','none'); 
			remove specific text - document.getElementsById("//span[contains(text(),'v2.41.1')]").remove(); -->

		<!-- custom styles -->
		<styles>
            <![CDATA[
                 .report-name { padding-left: 20px; } .report-name > img { float: left;height: 100%;margin-left: 30px;margin-top: 0.01px;width: auto; } 
       
            ]]>
		</styles>
	</configuration>
</extentreports>